<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/btnProfile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="32dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/profile" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="안녕하세요 김민영님"
                    android:textColor="#6d6dbf"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="당신에게 필요한 의사를 찾아보세요"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextTextPersonName"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/search_background"
                android:drawableStart="@drawable/search_icon"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="의사 검색하기"
                android:inputType="textPersonName"
                android:textAlignment="viewStart"
                android:textSize="16sp"
                android:textStyle="italic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/layout_1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/top_button_background"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_cardiology"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        app:srcCompat="@drawable/ic_1" />

                    <TextView
                        android:id="@+id/tv_cardiology"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Cardiology"
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/top_button_background"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_pulmonogis"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        app:srcCompat="@drawable/ic_2" />

                    <TextView
                        android:id="@+id/tv_pulmonogis"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Pulmonogis"
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/top_button_background"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_neurology"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        app:srcCompat="@drawable/ic_3" />

                    <TextView
                        android:id="@+id/tv_neurology"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Neurology"
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Top Doctoes"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="See All"
                    android:textAlignment="viewEnd"
                    android:textColor="#b55db8"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_dr1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/doc_row_background">

                    <ImageView
                        android:id="@+id/img_dr1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/doc_1" />

                    <TextView
                        android:id="@+id/tv_dr1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Dr. jack willson"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@+id/img_dr1"
                        app:layout_constraintTop_toTopOf="@+id/img_dr1" />

                    <TextView
                        android:id="@+id/tv_dr1_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gynecologist and surgeon"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="@+id/tv_dr1"
                        app:layout_constraintTop_toBottomOf="@+id/tv_dr1" />

                    <ImageView
                        android:id="@+id/img_dr1_timer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="@+id/img_dr1"
                        app:layout_constraintStart_toStartOf="@+id/tv_dr1_desc"
                        app:layout_constraintTop_toBottomOf="@+id/tv_dr1_desc"
                        app:srcCompat="@drawable/clock" />

                    <TextView
                        android:id="@+id/tv_dr1_schedule"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="09:25 AM- 13:30 PM"
                        android:textColor="#000000"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/img_dr1_timer"
                        app:layout_constraintStart_toEndOf="@+id/img_dr1_timer"
                        app:layout_constraintTop_toTopOf="@+id/img_dr1_timer" />

                    <TextView
                        android:id="@+id/btn_dr1"
                        android:layout_width="wrap_content"
                        android:layout_height="20sp"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/appointment_btn_background"
                        android:gravity="center"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:text="Appointment"
                        android:textColor="#b55db8"
                        android:textSize="10sp"

                        app:layout_constraintBottom_toBottomOf="@+id/tv_dr1_schedule"
                        app:layout_constraintStart_toEndOf="@+id/tv_dr1_schedule" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_dr2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/doc_row_background">

                    <ImageView
                        android:id="@+id/img_dr2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/doc_2" />

                    <TextView
                        android:id="@+id/tv_dr2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Dr. Andy Brown"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@+id/img_dr2"
                        app:layout_constraintTop_toTopOf="@+id/img_dr2" />

                    <TextView
                        android:id="@+id/tv_dr2_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Neurologist"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="@+id/tv_dr2"
                        app:layout_constraintTop_toBottomOf="@+id/tv_dr2" />

                    <ImageView
                        android:id="@+id/img_dr2_timer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="@+id/img_dr2"
                        app:layout_constraintStart_toStartOf="@+id/tv_dr2_desc"
                        app:layout_constraintTop_toBottomOf="@+id/tv_dr2_desc"
                        app:srcCompat="@drawable/clock" />

                    <TextView
                        android:id="@+id/tv_dr2_schedule"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="10:00 AM- 12:15 PM"
                        android:textColor="#000000"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/img_dr2_timer"
                        app:layout_constraintStart_toEndOf="@+id/img_dr2_timer"
                        app:layout_constraintTop_toTopOf="@+id/img_dr2_timer" />

                    <TextView
                        android:id="@+id/btn_dr2"
                        android:layout_width="wrap_content"
                        android:layout_height="20sp"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/appointment_btn_background"
                        android:gravity="center"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:text="Appointment"
                        android:textColor="#b55db8"
                        android:textSize="10sp"

                        app:layout_constraintBottom_toBottomOf="@+id/tv_dr2_schedule"
                        app:layout_constraintStart_toEndOf="@+id/tv_dr2_schedule" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_dr3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/doc_row_background">

                    <ImageView
                        android:id="@+id/img_dr3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/doc_3" />

                    <TextView
                        android:id="@+id/tv_dr3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Dr. William Smith"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@+id/img_dr3"
                        app:layout_constraintTop_toTopOf="@+id/img_dr3" />

                    <TextView
                        android:id="@+id/tv_dr3_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pediatrician"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="@+id/tv_dr3"
                        app:layout_constraintTop_toBottomOf="@+id/tv_dr3" />

                    <ImageView
                        android:id="@+id/img_dr3_timer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="@+id/img_dr3"
                        app:layout_constraintStart_toStartOf="@+id/tv_dr3_desc"
                        app:layout_constraintTop_toBottomOf="@+id/tv_dr3_desc"
                        app:srcCompat="@drawable/clock" />

                    <TextView
                        android:id="@+id/tv_dr3_schedule"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="08:25 AM- 12:30 PM"
                        android:textColor="#000000"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/img_dr3_timer"
                        app:layout_constraintStart_toEndOf="@+id/img_dr3_timer"
                        app:layout_constraintTop_toTopOf="@+id/img_dr3_timer" />

                    <TextView
                        android:id="@+id/btn_dr3"
                        android:layout_width="wrap_content"
                        android:layout_height="20sp"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/appointment_btn_background"
                        android:gravity="center"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:text="Appointment"
                        android:textColor="#b55db8"
                        android:textSize="10sp"

                        app:layout_constraintBottom_toBottomOf="@+id/tv_dr3_schedule"
                        app:layout_constraintStart_toEndOf="@+id/tv_dr3_schedule" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>